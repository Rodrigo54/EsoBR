<GuiXml>
	<Controls>
		<TopLevelControl name="EsoBRUI" mouseEnabled="true" movable="true" drawLayer="DL_BACKGROUND" clampedToScreen="false" hidden="true">
			<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="GuiRoot" offsetY="7" />
			<OnMouseUp>
				EsoBR_SaveAnchor()
			</OnMouseUp>
			<Controls>
				<Texture name="$(parent)Bg" textureFile="EsoUI/Art/Performance/StatusMeterMunge.dds">
					<Dimensions x="200" y="256"/>
					<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
				</Texture>
			</Controls>
		</TopLevelControl>

		<Button name="EsoBR_FlagControl" virtual="true" mouseEnabled="true" text="">
			<Dimensions x="30" y="22" />
			<Controls>
				<Texture name="$(parent)Texture" alpha="1" >
					<Dimensions x="32" y="32" />
					<Anchor fill="$(parent)" point="center" offsetX="0" offsetY="0" />
				</Texture>
			</Controls>
		</Button>
	</Controls>
</GuiXml>